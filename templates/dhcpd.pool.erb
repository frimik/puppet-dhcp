#################################
# <%= name network mask %>
#################################
subnet <%= network %> netmask <%= mask %> {
<% if has_variable?("range") and range != :undef -%>
  pool
  {
<% range.each do |r| -%>
    range <%= r %>;
<% end -%>
}
<% end -%>

  option subnet-mask <%= mask %>;
  option routers <%= gateway %>;

  <% if has_variable?("options") -%>
    # custom options
<% options.each do |opt| -%>
    <%= opt %>;
<% end -%>
<% end -%>
}

